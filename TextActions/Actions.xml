<?xml version="1.0"?>
<action-recipes>
	
	<!-- Format blocks automatically (like TextMate and Chocolat) -->
	<action id="com.peteschaffner.sugar.shellac.pretty-block.brace.curly" category="hidden">
		<script>pretty_block.js</script>
		<text-trigger key-equivalent="enter"></text-trigger>
		<syntax-context>js punctuation.brace.curly.close</syntax-context>
		<setup>
			<character>{</character>
		</setup>
	</action>
	
	<action id="com.peteschaffner.sugar.shellac.pretty-block.brace.square" category="hidden">
		<script>pretty_block.js</script>
		<text-trigger key-equivalent="enter"></text-trigger>
		<syntax-context>js punctuation.brace.square.close</syntax-context>
		<setup>
			<character>[</character>
		</setup>
	</action>
	
	<!--Quickly cycle through different color strings (Hex/RGB/RGBA/HSL/HSLA)-->
	<action id="com.peteschaffner.sugar.shellac.convert-color.next" category="shellac.actions.text">
		<script>convert_color.js</script>
		<key-equivalent>option cmd j</key-equivalent>
		<setup>
			<direction>next</direction>
		</setup>
	</action>
	
	<action id="com.peteschaffner.sugar.shellac.convert-color.previous" category="shellac.actions.text">
		<script>convert_color.js</script>
		<key-equivalent>option cmd k</key-equivalent>
		<setup>
			<direction>previous</direction>
		</setup>
	</action>
	
	<!--TODO: Auto wrap or auto pair braces (on hold for fix)-->
	
</action-recipes>