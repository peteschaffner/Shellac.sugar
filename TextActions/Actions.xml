<?xml version="1.0"?>
<action-recipes>
	
	<!-- Format blocks automatically (like TextMate and Chocolat) -->
	<action id="com.peteschaffner.sugar.shellac.pretty-block.brace.curly" category="hidden">
		<script>pretty-block.js</script>
		<text-trigger key-equivalent="enter"></text-trigger>
		<syntax-context>js punctuation.brace.curly.close</syntax-context>
		<setup>
			<character>{</character>
		</setup>
	</action>
	
	<action id="com.peteschaffner.sugar.shellac.pretty-block.brace.square" category="hidden">
		<script>pretty-block.js</script>
		<text-trigger key-equivalent="enter"></text-trigger>
		<syntax-context>js punctuation.brace.square.close</syntax-context>
		<setup>
			<character>[</character>
		</setup>
	</action>
	
	<!-- Auto wrap or auto pair braces -->
	<action id="com.peteschaffner.sugar.shellac.auto-wrap.brace.round" category="hidden">
		<script>auto-wrap.rb</script>
		<text-trigger key-equivalent="("></text-trigger>
		<setup>
			<character>(</character>
		</setup>
	</action>
	
	<action id="com.peteschaffner.sugar.shellac.no-dupes.brace.round" category="hidden">
		<script>no-dupes.js</script>
		<text-trigger key-equivalent=")"></text-trigger>
		<syntax-context>js punctuation.brace.round.close</syntax-context>
		<setup>
			<character>)</character>
		</setup>
	</action>
	
</action-recipes>